.hero
  width 100%
  height auto
  padding 6% 0 0
  text-align center
  display grid
  grid-template-columns 50% 50%
  &__text 
    display grid
    grid-template-rows 30% 20% 15%
    grid-gap 10px
  &__text
    h1 
      color #BEBEBE
      align-self end
      margin-bottom 0
  &__text 
    h3 
      color #BEBEBE
  &__text 
    span 
      color #DA4A74
  &__image 
    img 
      width 90%
      height auto
  &--button 
    button 
      width 30%
      margin-top 10px
      padding 15px 10px
      background #DA4A74
      color #ffffff
      font-size 20px
      font-weight 800
      border none
      border-radius 5px
      transition all 0.3s
  &--button 
    button
      &:hover 
        background #8a072d
        transform scale(0.9)
        cursor pointer
